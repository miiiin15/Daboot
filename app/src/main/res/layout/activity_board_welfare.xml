<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/welfare_BAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bar_welfare_Filter"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_welfare_select_option"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:backgroundTint="#ffffff"
                app:icon="@drawable/ic_down"
                app:iconTint="@color/volunteer" />
            <EditText
                android:id="@+id/edt_welfare_input"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="10dp"
                android:hint="필터링 할 내용을 입력하세요"/>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_welfare_search"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    app:icon="@drawable/ic_search"
                    app:iconTint="@color/volunteer" />

                <Button
                    android:id="@+id/btn_welfare_close_filter"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    app:icon="@drawable/ic_close"
                    app:iconTint="@color/volunteer" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar_welfare_Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_welfare_back"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffffff"
                app:icon="@drawable/ic_back"
                app:iconTint="@color/volunteer"/>



            <Button
                android:id="@+id/btn_welfare_Service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="봉사" />

            <Button
                android:id="@+id/btn_welfare_Policy"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="정책"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="11dp" />

            <Button
                android:id="@+id/btn_welfare_Health"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="보건" />

            <Button
                android:id="@+id/btn_welfare_All"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="전체" />
            <Button
                android:id="@+id/btn_welfare_Renew"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                app:icon="@drawable/ic_renew"
                app:iconTint="@color/volunteer" />

            <Button
                android:id="@+id/btn_welfare_Filter"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                android:onClick="Clicked"
                app:icon="@drawable/ic_filter"
                app:iconTint="@color/volunteer" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/btns_welfare_select_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/square_white"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <Button
            android:id="@+id/btn_welfare_option_title"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            style="?android:attr/borderlessButtonStyle"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="제목"/>
        <Button
            android:id="@+id/btn_welfare_option_contents"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            style="?android:attr/borderlessButtonStyle"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="내용"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tvs_welfare_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_welfare">

        <TextView
            android:id="@+id/tv_welfare_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_alignParentLeft="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="분야"/>

        <TextView
            android:id="@+id/tv_welfare_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_toRightOf="@id/tv_welfare_category"
            android:textStyle="bold"
            android:text="제목"/>



        <TextView
            android:id="@+id/tv_welfare_write_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="2dp"
            android:textStyle="bold"
            android:text="등록시간" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_welfare"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/welfare_BAR"
        android:layout_below="@+id/welfare_BAR"
        android:paddingTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">
    </androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>