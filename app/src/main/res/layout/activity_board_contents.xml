<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_board_contents_back"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        app:icon="@drawable/ic_back"
        app:iconTint="@color/enable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_board_contents_more_menu"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        app:icon="@drawable/ic_more_menu"
        app:iconTint="@color/enable"
        app:layout_constraintStart_toEndOf="@+id/tv_board_contents_writeTime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_board_contents_title"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="Test title"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@id/btn_board_contents_back"
        app:layout_constraintStart_toEndOf="@+id/btn_board_contents_back"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_board_contents_writeTime"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="12 : 00"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/tv_board_contents_title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_board_contents"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_board_contents_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tv_board_contents_coments"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/square_invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_board_contents" />

    <Switch
        android:id="@+id/btn_board_contents_anonymos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:track="@drawable/switch_track_selector"
        android:thumb="@drawable/switch_thumb_selector"
        android:text="익명"
        android:textColor="@color/enable"
        android:textSize="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_board_contents_coments"
        app:layout_constraintTop_toBottomOf="@+id/tv_board_contents_coments" />

    <Button
        android:id="@+id/btn_board_contents_write_coment"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="41dp"
        android:layout_height="36dp"
        android:backgroundTint="#ffffff"
        android:text=" "
        android:textSize="10dp"
        app:icon="@drawable/ic_write"
        app:iconTint="@color/enable"
        app:layout_constraintStart_toEndOf="@+id/edt_board_contents_coment"
        app:layout_constraintTop_toBottomOf="@+id/tv_board_contents_coments" />

    <EditText
        android:id="@+id/edt_board_contents_coment"
        android:layout_width="290dp"
        android:layout_height="25dp"
        android:layout_marginStart="5dp"
        android:text="TextView"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/btn_board_contents_anonymos"
        app:layout_constraintTop_toTopOf="@+id/btn_board_contents_anonymos" />


</androidx.constraintlayout.widget.ConstraintLayout>