<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_join_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="회 원 가 입"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_join_title">

        <EditText
            android:id="@+id/edt_join_ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="아이디를 입력하세요."
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_Check_ID"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:backgroundTint="@color/enable"
            android:text="중복 확인"
            android:textColor="#F8FAFF"
            android:textSize="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_join_id_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 형식의 4~20자리의 영문과 숫자"
        android:textColor="#aaaaaa"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <EditText
        android:id="@+id/edt_join_pwd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호를 입력하세요."
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="20dp"
        android:maxLength="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_join_id_comment" />

    <TextView
        android:id="@+id/tv_join_pwd_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4에서 20자리 사이 영문과 숫자"
        android:textColor="#aaaaaa"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_join_pwd" />

    <EditText
        android:id="@+id/edt_join_pwdCheck"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="비밀번호 확인."
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_join_pwd_comment" />

    <TextView
        android:id="@+id/tv_join_repwd_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호와 동일"
        android:textColor="#aaaaaa"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_join_pwdCheck" />


    <Button
        android:id="@+id/btn_join_Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/enable"
        android:text="추 가 정 보"
        android:textColor="#F8FAFF"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_join_repwd_comment" />



</androidx.constraintlayout.widget.ConstraintLayout>