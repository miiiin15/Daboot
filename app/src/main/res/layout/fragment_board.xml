<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/BAR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/bar_Filter"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_select_option"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:backgroundTint="#ffffff"
                app:icon="@drawable/ic_down"
                app:iconTint="@color/black"
                style="?android:attr/borderlessButtonStyle" />
            <EditText
                android:id="@+id/edt_input"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:textSize="10dp"
                android:hint="필터링 할 내용을 입력하세요"/>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_search"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    app:icon="@drawable/ic_search"
                    app:iconTint="@color/black"
                    style="?android:attr/borderlessButtonStyle" />
                <Button
                    android:id="@+id/btn_close_filter"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    app:icon="@drawable/ic_close"
                    app:iconTint="@color/black"
                    style="?android:attr/borderlessButtonStyle" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar_Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_All"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="전체" />

            <Button
                android:id="@+id/btn_Free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="자유" />

            <Button
                android:id="@+id/btn_Question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="질문" />

            <Button
                android:id="@+id/btn_Market"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="장터"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="11dp" />

            <Button
                android:id="@+id/btn_Welfare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="정보" />

            <Button
                android:id="@+id/btn_Renew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                app:icon="@drawable/ic_renew"
                app:iconTint="@color/black"
                style="?android:attr/borderlessButtonStyle" />

            <Button
                android:id="@+id/btn_Filter"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                android:onClick="Clicked"
                app:icon="@drawable/ic_filter"
                app:iconTint="@color/black" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/btns_select_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/sq_bk"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <Button
            android:id="@+id/option_title"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            style="?android:attr/borderlessButtonStyle"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="제목"/>
        <Button
            android:id="@+id/option_contents"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            style="?android:attr/borderlessButtonStyle"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="내용"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/BAR"
        android:layout_below="@+id/BAR"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">
    </androidx.recyclerview.widget.RecyclerView>

