<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/board_BAR"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/bar_board_Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_board_select_option"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#ffffff"
                app:icon="@drawable/ic_down"
                app:iconTint="@color/enable" />
            <EditText
                android:id="@+id/edt_board_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="10dp"
                android:hint="필터링 할 내용을 입력하세요"/>
            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_board_search"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#ffffff"
                    app:icon="@drawable/ic_search"
                    app:iconTint="@color/enable" />

                <Button
                    android:id="@+id/btn_board_close_filter"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#ffffff"
                    app:icon="@drawable/ic_close"
                    app:iconTint="@color/enable" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bar_board_Category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:visibility="visible"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_board_All"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="전체" />

            <Button
                android:id="@+id/btn_board_Free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="자유" />

            <Button
                android:id="@+id/btn_board_Question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="질문" />

            <Button
                android:id="@+id/btn_board_Market"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="장터"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="11dp" />

            <Button
                android:id="@+id/btn_board_Welfare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
                android:backgroundTint="@color/white"
                android:textColor="@color/volunteer"
                android:textAlignment="center"
                android:textSize="11dp"
                android:text="정보" />

            <Button
                android:id="@+id/btn_board_Renew"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                app:icon="@drawable/ic_renew"
                app:iconTint="@color/enable" />

            <Button
                android:id="@+id/btn_board_Filter"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#ffffff"
                android:onClick="Clicked"
                app:icon="@drawable/ic_filter"
                app:iconTint="@color/enable" />
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/btns_board_select_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/square_white"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <Button
            android:id="@+id/btn_board_option_title"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            style="?android:attr/borderlessButtonStyle"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="제목"/>
        <Button
            android:id="@+id/btn_board_option_contents"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            style="?android:attr/borderlessButtonStyle"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="내용"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tvs_board_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_board">

        <TextView
            android:id="@+id/text_board_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_alignParentLeft="true"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="주제"/>

        <TextView
            android:id="@+id/text_board_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:layout_toRightOf="@id/text_board_category"
            android:textStyle="bold"
            android:text="제목"/>



        <TextView
            android:id="@+id/text_board_comnet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/text_board_time"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="댓글"/>

        <TextView
            android:id="@+id/text_board_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginHorizontal="2dp"
            android:textStyle="bold"
            android:text="작성시간" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/board_BAR"
        android:layout_below="@+id/board_BAR"
        android:paddingTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true">
    </androidx.recyclerview.widget.RecyclerView>

    <!--<Button
        android:id="@+id/write"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/board"
        android:layout_alignRight="@+id/board"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="80dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="25dp" />-->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_board_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/enable"
        android:textSize="35dp"
        app:icon="@drawable/ic_write"
        app:iconTint="@color/white" />
</RelativeLayout>